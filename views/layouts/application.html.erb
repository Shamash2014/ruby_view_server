<%
  def link_to(name, url)
    "<a href='#{url}'>#{name}</a>"
  end
%>

<html>
  <body>
    <h1>You're using a layout</h1>
    <p>
      <h3> I'm a header</h3>
      <p>
        <%if @request.query['first_name'] && !@request.query['first_name'].empty?%>
        Hi, <%= @request.query['first_name']%>
        <%else%>
        Enter your name
        <%end%>
        <form method='post' action="<%= @request.path %>">
        <input type="text" name="first_name" placeholder='first name'/><br />
        <input type="submit" value="Submit" />
    </form>
      </p>
      <p>Put things in the header</p>
      <a href='me.html'>Me</a>
      <a href="www.google.com"></a>   
      <a href="#me">That's it</a>
    </p>
    <hr />
    <div id="me">
      <%= yield %>
    </div>
    <hr />
    <div>
      <h3> I'm a footer</h3>
      <p>I am the one</p>
      <%= link_to('vk', 'http://www.vk.com') %>
      <%= @request.query.inspect %>
    </div>

    <p>
          
    </p>
  </body>
</html>